@page
@model IndexModel

<h2>Riddles Quiz</h2>

<form method="post">
    @Html.AntiForgeryToken()

    @for (int i = 0; i < Model.Riddles.Count; i++)
    {
        <div>
            <label>@Model.Riddles[i].Question</label>
            <input type="text" name="Answers[@i]" required />
        </div>
    }

    <button type="submit">Submit Answers</button>
</form>
